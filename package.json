{
  "name": "your-app",
  "version": "1.0.0",
  "description": "Go + HTMX + Tailwind CSS web application template",
  "private": true,
  "scripts": {
    "css:build": "npx tailwindcss -i ./web/tailwind/input.css -o ./web/static/css/site.css --minify",
    "css:watch": "npx tailwindcss -i ./web/tailwind/input.css -o ./web/static/css/site.css --watch",
    "ts:build": "tsc -p tsconfig.json",
    "ts:watch": "tsc -p tsconfig.json --watch",
    "dev": "npm run css:watch"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.0"
  }
}
